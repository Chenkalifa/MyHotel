<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hyperactive.co.il.mehearthotel.HomeScreenActivity">

    <ImageView
        android:id="@+id/logo_Iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/logo_bottom_margin"

        android:scaleType="centerCrop"
        android:src="@drawable/logo_only_h" />

    <LinearLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_Iv"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/btn_without_states"
        android:orientation="horizontal">

        <Button
            android:textSize="@dimen/btn_text_size"
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background_no_stroke"
            android:text="@string/login"
            android:textColor="@color/btn_color" />
        <View
            android:layout_marginLeft="@dimen/home_screen_divider_margin"
            android:layout_marginRight="@dimen/home_screen_divider_margin"
            android:background="@color/textColor"
            android:layout_width="@dimen/home_screen_divider_width"
            android:layout_height="@dimen/home_screen_divider_height"/>

        <Button
            android:textSize="@dimen/btn_text_size"
            android:id="@+id/signupBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background_no_stroke"
            android:text="@string/signup"
            android:textColor="@color/btn_color" />
    </LinearLayout>
</RelativeLayout>
