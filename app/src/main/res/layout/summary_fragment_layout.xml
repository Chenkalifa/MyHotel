<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="600dp"
android:background="@color/colorPrimary15transparent"
    android:id="@+id/summary_fragment_container">
    <ImageView
        android:layout_gravity="right"
        android:layout_margin="@dimen/ic_close_margin"
        android:background="@drawable/close_states"
        android:id="@+id/ic_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/mediumPadding"
        android:gravity="center"
        android:textSize="@dimen/titelSize"
        android:text="@string/booking_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/summary_fragment_summaryBody_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/summary_proceedTv"
            android:text="@string/proceed"
            android:layout_margin="@dimen/smallPadding"
            android:background="@drawable/btn_background"
            android:textColor="@color/btn_color"
            android:paddingLeft="@dimen/btn_side_padding"
            android:paddingRight="@dimen/btn_side_padding"
            android:paddingTop="@dimen/btn_top_bottom_padding"
            android:paddingBottom="@dimen/btn_top_bottom_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>