<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen_login_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hyperactive.co.il.mehearthotel.HomeScreenActivity"
    android:background="@color/colorPrimary15transparent">
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/ic_close_margin"
        android:background="@drawable/close_states"
        android:id="@+id/ic_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:textColorHint="@color/textColor"
        android:textColor="@color/textColor"
        android:layout_below="@+id/ic_close"
        android:layout_centerHorizontal="true"
        android:id="@+id/usernameEt"
        android:inputType="textVisiblePassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_large_height"
        android:hint="@string/username"
        />
    <EditText
        android:textColorHint="@color/textColor"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_large_height"
        android:hint="@string/password"
        android:id="@+id/passwordEt"
        android:inputType="textPassword"
        android:layout_below="@id/usernameEt"/>
    <Button
        android:textAlignment="center"
        android:textSize="@dimen/mediumSizeFont"
        android:layout_margin="@dimen/smallPadding"
        android:paddingBottom="@dimen/btn_top_bottom_padding"
        android:paddingTop="@dimen/btn_top_bottom_padding"
        android:paddingLeft="@dimen/btn_side_padding"
        android:paddingRight="@dimen/btn_side_padding"
        android:textColor="@color/btn_color"

        android:background="@drawable/btn_background"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/loginBtn"
        android:layout_below="@id/passwordEt"/>

    <CheckBox
        android:textColor="@color/textColor"
        android:id="@+id/keeplogged_checkbox"
        android:text="@string/keeplogged"
        android:layout_below="@id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
